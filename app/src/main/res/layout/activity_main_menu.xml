<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/olheiros"
    tools:context=".MainMenu">

    <TextView
        android:id="@+id/textView_MainMenu"
        android:layout_width="109dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Main Menu"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#070707"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Practice"
        android:layout_width="125dp"
        android:layout_height="67dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="57dp"
        android:text="Practice"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toTopOf="@+id/button_Tatics"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_MainMenu" />

    <Button
        android:id="@+id/button_Scout"
        android:layout_width="125dp"
        android:layout_height="67dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:text="Scout"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toTopOf="@+id/button_Market"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Tatics"
        android:layout_width="125dp"
        android:layout_height="67dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:text="Tatics"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toTopOf="@+id/button_Squad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Practice" />

    <Button
        android:id="@+id/button_Squad"
        android:layout_width="125dp"
        android:layout_height="67dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="107dp"
        android:text="Squad"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Tatics" />

    <Button
        android:id="@+id/button_Market"
        android:layout_width="125dp"
        android:layout_height="67dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="3dp"
        android:text="Market"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toTopOf="@+id/button_League"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Scout" />

    <Button
        android:id="@+id/button_League"
        android:layout_width="125dp"
        android:layout_height="67dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="104dp"
        android:text="League"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Market" />

</androidx.constraintlayout.widget.ConstraintLayout>