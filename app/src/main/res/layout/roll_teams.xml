    <TextView
        android:id="@+id/textViewLeague"
        android:layout_width="159dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:text="League"
        app:layout_constraintEnd_toStartOf="@+id/textViewBudget"
